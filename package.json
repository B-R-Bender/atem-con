{
  "name": "atem-connection",
  "version": "3.0.0-0",
  "description": "Typescript Node.js library for connecting with an ATEM switcher.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nrkno/sofie-atem-connection.git"
  },
  "bugs": {
    "url": "https://github.com/nrkno/sofie-atem-connection/issues"
  },
  "homepage": "https://github.com/nrkno/sofie-atem-connection#readme",
  "contributors": [
    {
      "name": "Balte de Wit",
      "email": "contact@balte.nl",
      "url": "http://balte.nl"
    },
    {
      "name": "Julian Waller",
      "email": "git@julusian.co.uk"
    }
  ],
  "scripts": {
    "build": "rimraf dist && yarn build:main",
    "build:main": "tsc -p tsconfig.build.json",
    "lint:raw": "eslint --ext .ts --ext .js --ext .tsx --ext .jsx --ignore-pattern dist",
    "lint": "yarn lint:raw .",
    "lint-fix": "yarn lint --fix",
    "unit": "jest --forceExit",
    "test": "yarn lint && yarn unit",
    "watch": "jest --watch",
    "cov": "jest --coverage; open-cli coverage/lcov-report/index.html",
    "cov-open": "open-cli coverage/lcov-report/index.html",
    "docs": "yarn docs:html && open-cli docs/index.html",
    "docs:test": "yarn docs:html",
    "docs:html": "typedoc --tsconfig tsconfig.docs.json --entryPoints src/index.ts --excludePrivate --theme default --out docs",
    "docs:json": "typedoc --tsconfig tsconfig.docs.json --json docs/typedoc.json --entryPoints src/index.ts",
    "release": "standard-version",
    "reset": "git clean -dfx && git reset --hard && yarn",
    "validate:dependencies": "yarn audit --groups dependencies && yarn license-validate --allowPackages caniuse-lite@1.0.30001230",
    "validate:dev-dependencies": "yarn audit --groups devDependencies",
    "license-validate": "yarn sofie-licensecheck"
  },
  "engines": {
    "node": ">=12.20"
  },
  "files": [
    "/dist",
    "/CHANGELOG.md",
    "/README.md",
    "/LICENSE"
  ],
  "devDependencies": {
    "@sinonjs/fake-timers": "^7.1.2",
    "@sofie-automation/code-standard-preset": "^1.1.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^14.18.12",
    "@types/object-path": "^0.11.1",
    "@types/sinonjs__fake-timers": "^6.0.4",
    "jest": "^27.5.1",
    "jest-extended": "^2.0.0",
    "object-path": "^0.11.8",
    "open-cli": "^6.0.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.11",
    "typescript": "~4.5"
  },
  "keywords": [
    "atem",
    "blackmagic",
    "bmd",
    "switcher",
    "video"
  ],
  "dependencies": {
    "eventemitter3": "^4.0.7",
    "exit-hook": "^2.2.1",
    "nanotimer": "^0.3.15",
    "p-queue": "^6.6.2",
    "threadedclass": "^1.0.1",
    "tslib": "^2.3.1",
    "wavefile": "^8.4.4"
  },
  "standard-version": {
    "message": "chore(release): %s",
    "tagPrefix": ""
  },
  "prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
  "lint-staged": {
    "*.{css,json,md,scss}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "yarn lint-fix"
    ]
  }
}
